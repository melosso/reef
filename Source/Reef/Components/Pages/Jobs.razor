@page "/jobs"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inject JobService JobService
@inject ProfileService ProfileService
@inject ConnectionService ConnectionService
@inject GroupService GroupService
@inject ToastService ToastService
@inject NavigationManager Nav
@using Reef.Core.Models
@using Reef.Core.Services

<PageTitle>Jobs · Reef</PageTitle>

<div>
    <!-- Header -->
    <div class="flex items-end justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">Jobs</h1>
            <p class="text-sm text-gray-500 mt-1">Manage scheduled job execution and automation workflows.</p>
        </div>
        <button @onclick="OpenAddJobModal"
                class="px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700 shadow-lg shadow-blue-500/20 transition-all flex items-center">
            <i data-lucide="plus" class="h-4 w-4 mr-2"></i>
            New Job
        </button>
    </div>

    <!-- Advanced Filters -->
    <div class="surface-container p-4 mb-6">
        <!-- Search Bar -->
        <div class="mb-4">
            <div class="relative">
                <i data-lucide="search" class="absolute left-3 top-3 h-4 w-4 text-gray-400"></i>
                <input type="text"
                       @bind="searchQuery"
                       @bind:event="oninput"
                       @onkeyup="ApplyFilters"
                       placeholder="Search by job name or profile..."
                       class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
        </div>

        <div class="flex items-center justify-between mb-4">
            <h2 class="text-sm font-semibold text-gray-700">Filters</h2>
            <div class="flex items-center gap-3">
                @if (HasActiveFilters())
                {
                    <button @onclick="ClearAllFilters" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                        Clear All
                    </button>
                }
                <button @onclick="ToggleQueueMetrics"
                        class="text-gray-400 hover:text-gray-600 focus:outline-none"
                        title="Show Queue Metrics">
                    <i data-lucide="chart-area" class="h-5 w-5"></i>
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <!-- Job Health Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Job Health</label>
                <select @bind="filterHealth" @bind:after="ApplyFilters"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">All Jobs</option>
                    <option value="auto-paused">Auto-Paused</option>
                    <option value="failing">Failing</option>
                    <option value="warning">Warning</option>
                    <option value="healthy">Healthy</option>
                    <option value="disabled">Disabled</option>
                </select>
            </div>

            <!-- Status Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select @bind="filterStatus" @bind:after="ApplyFilters"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Show All</option>
                    <option value="0">Idle</option>
                    <option value="1">Queued</option>
                    <option value="2">Running</option>
                    <option value="3">Completed</option>
                    <option value="4">Failed</option>
                    <option value="5">Cancelled</option>
                </select>
            </div>

            <!-- Profile Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Profile</label>
                <select @bind="filterProfile" @bind:after="ApplyFilters"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Show All</option>
                    @foreach (var profile in profiles)
                    {
                        <option value="@profile.Id">@profile.Name</option>
                    }
                </select>
            </div>

            <!-- Connection Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Connection</label>
                <select @bind="filterConnection" @bind:after="ApplyFilters"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Show All</option>
                    @foreach (var conn in connections)
                    {
                        <option value="@conn.Id">@conn.Name</option>
                    }
                </select>
            </div>

            <!-- Group Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Group</label>
                <select @bind="filterGroup" @bind:after="ApplyFilters"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Show All</option>
                    @foreach (var group in groups)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Queue Metrics Panel (Toggleable) -->
    @if (showQueueMetrics)
    {
        <div class="surface-container p-4 mb-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                    <i data-lucide="layers" class="h-5 w-5 mr-2 text-blue-600"></i>
                    Queue Metrics
                </h2>
                <button @onclick="RefreshQueueMetrics"
                        class="text-sm text-blue-600 hover:text-blue-800 flex items-center">
                    <i data-lucide="refresh-cw" class="h-4 w-4 mr-1"></i>
                    Refresh
                </button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="bg-blue-50 rounded-lg p-4 border-l-4 border-blue-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-blue-600 font-medium">Queue Depth</p>
                            <p class="text-2xl font-bold text-blue-700">@queueMetrics.QueueDepth</p>
                            <p class="text-xs text-blue-500 mt-1">Jobs waiting</p>
                        </div>
                        <i data-lucide="inbox" class="h-8 w-8 text-blue-400"></i>
                    </div>
                </div>

                <div class="bg-green-50 rounded-lg p-4 border-l-4 border-green-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-green-600 font-medium">Active</p>
                            <p class="text-2xl font-bold text-green-700">@queueMetrics.ActiveJobs</p>
                            <p class="text-xs text-green-500 mt-1">Currently running</p>
                        </div>
                        <i data-lucide="activity" class="h-8 w-8 text-green-400"></i>
                    </div>
                </div>

                <div class="bg-purple-50 rounded-lg p-4 border-l-4 border-purple-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-purple-600 font-medium">Available</p>
                            <p class="text-2xl font-bold text-purple-700">@queueMetrics.AvailableSlots</p>
                            <p class="text-xs text-purple-500 mt-1">of @queueMetrics.MaxSlots slots</p>
                        </div>
                        <i data-lucide="cpu" class="h-8 w-8 text-purple-400"></i>
                    </div>
                </div>

                <div class="bg-orange-50 rounded-lg p-4 border-l-4 border-orange-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-orange-600 font-medium">Processed</p>
                            <p class="text-2xl font-bold text-orange-700">@queueMetrics.ProcessedToday</p>
                            <p class="text-xs text-orange-500 mt-1">Total executed</p>
                        </div>
                        <i data-lucide="trending-up" class="h-8 w-8 text-orange-400"></i>
                    </div>
                </div>
            </div>

            <!-- Capacity Usage Progress Bar -->
            <div class="mt-4">
                <div class="flex justify-between text-xs text-gray-600 mb-1">
                    <span>Capacity Usage</span>
                    <span>@queueMetrics.UsagePercent%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                         style="width: @(queueMetrics.UsagePercent)%">
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
        <div class="bg-gray-50 rounded-lg shadow p-4 border-l-4 border-gray-400">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 font-medium">Total Jobs</p>
                    <p class="text-2xl font-bold text-gray-700">@statistics.TotalJobs</p>
                </div>
                <i data-lucide="briefcase" class="h-8 w-8 text-gray-400"></i>
            </div>
        </div>

        <div class="bg-green-50 rounded-lg shadow p-4 border-l-4 border-green-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-green-600 font-medium">Running</p>
                    <p class="text-2xl font-bold text-green-700">@statistics.RunningJobs</p>
                </div>
                <i data-lucide="play-circle" class="h-8 w-8 text-green-500"></i>
            </div>
        </div>

        <div class="bg-blue-50 rounded-lg shadow p-4 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-blue-600 font-medium">Queued</p>
                    <p class="text-2xl font-bold text-blue-700">@statistics.QueuedJobs</p>
                </div>
                <i data-lucide="clock" class="h-8 w-8 text-blue-500"></i>
            </div>
        </div>

        <div class="bg-yellow-50 rounded-lg shadow p-4 border-l-4 border-yellow-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-yellow-600 font-medium">Idle</p>
                    <p class="text-2xl font-bold text-yellow-700">@statistics.IdleJobs</p>
                </div>
                <i data-lucide="pause-circle" class="h-8 w-8 text-yellow-500"></i>
            </div>
        </div>

        <div class="bg-red-50 rounded-lg shadow p-4 border-l-4 border-red-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-red-600 font-medium">Failed</p>
                    <p class="text-2xl font-bold text-red-700">@statistics.FailedJobs</p>
                </div>
                <i data-lucide="alert-circle" class="h-8 w-8 text-red-500"></i>
            </div>
        </div>
    </div>

    <!-- Auto-Paused Jobs Banner -->
    @if (statistics.AutoPausedJobs > 0)
    {
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-lg">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <i data-lucide="pause-circle" class="h-6 w-6 text-red-600 flex-shrink-0"></i>
                    <div>
                        <p class="text-sm font-medium text-red-800">
                            <span class="font-bold">@statistics.AutoPausedJobs</span> job(s) are auto-paused due to repeated failures
                        </p>
                        <p class="text-xs text-red-600 mt-1">
                            These jobs stopped running to prevent resource waste. Review the issues and resume them when ready.
                        </p>
                    </div>
                </div>
                <button @onclick='() => FilterByHealth("auto-paused")'
                        class="px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700 transition-colors">
                    Show Me
                </button>
            </div>
        </div>
    }

    <!-- Jobs Table -->
    <div class="surface-container overflow-hidden">
        @if (filteredJobs.Count == 0)
        {
            <div class="p-12 text-center">
                <i data-lucide="inbox" class="h-12 w-12 text-gray-300 mx-auto mb-4"></i>
                <p class="text-gray-500 text-sm">
                    @if (string.IsNullOrWhiteSpace(searchQuery) && !HasActiveFilters())
                    {
                        <text>No jobs found. Click "New Job" to create one.</text>
                    }
                    else
                    {
                        <text>No jobs match your filters. Try adjusting your search criteria.</text>
                    }
                </p>
            </div>
        }
        else
        {
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50/50 border-b border-gray-100">
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Health</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Name</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Profile</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Schedule</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Next Run</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Last Execution</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Status</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var job in filteredJobs)
                    {
                        <tr class="hover:bg-blue-50/30 transition-colors group">
                            <td class="px-6 py-4">
                                @RenderHealthBadge(job)
                            </td>
                            <td class="px-6 py-4">
                                <div class="font-medium text-gray-900">@job.Name</div>
                                @if (!string.IsNullOrWhiteSpace(job.Description))
                                {
                                    <div class="text-xs text-gray-500 mt-0.5">@job.Description</div>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @GetProfileName(job.ProfileId ?? 0)
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @GetScheduleDisplay(job)
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @(job.NextRunTime?.ToString("yyyy-MM-dd HH:mm") ?? "—")
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @RenderLastExecution(job)
                            </td>
                            <td class="px-6 py-4">
                                <StatusBadge Text="@(job.IsEnabled ? "Enabled" : "Disabled")"
                                             Color="@(job.IsEnabled ? "green" : "gray")"
                                             ShowDot="true" />
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end space-x-2">
                                    @if (job.IsEnabled && job.ScheduleType == ScheduleType.Manual)
                                    {
                                        <button @onclick="() => RunJobNow(job)"
                                                class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-green-600"
                                                title="Run Now">
                                            <i data-lucide="play" class="h-4 w-4"></i>
                                        </button>
                                    }
                                    <button @onclick="() => EditJob(job)"
                                            class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-blue-600"
                                            title="Edit">
                                        <i data-lucide="edit-2" class="h-4 w-4"></i>
                                    </button>
                                    <button @onclick="() => DeleteJob(job)"
                                            class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-red-600"
                                            title="Delete">
                                        <i data-lucide="trash-2" class="h-4 w-4"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- Job Modal -->
<Modal Title="@(editingJob == null ? "Add New Job" : "Edit Job")"
       IsVisible="showJobModal"
       OnClose="CloseJobModal"
       Size="large">
    <JobForm Job="editingJob" OnSave="HandleJobSaved" OnCancel="CloseJobModal" />
</Modal>

<!-- Delete Confirmation -->
<Modal Title="Confirm Delete" IsVisible="@(showDeleteConfirm && deletingJob != null)" OnClose="CancelDelete">
    <div class="space-y-4">
        <p class="text-gray-700">Are you sure you want to delete the job <b>"@(deletingJob?.Name)"</b>?</p>
        <div class="flex justify-end space-x-3 pt-4 border-t">
            <button @onclick="CancelDelete"
                    class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                Cancel
            </button>
            <button @onclick="ConfirmDelete"
                    class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                Delete
            </button>
        </div>
    </div>
</Modal>

@code {
    private List<Job> jobs = new();
    private List<Job> filteredJobs = new();
    private List<ProfileWithConnection> profiles = new();
    private List<Connection> connections = new();
    private List<ProfileGroup> groups = new();

    private string searchQuery = "";
    private string filterHealth = "";
    private string filterStatus = "";
    private string filterProfile = "";
    private string filterConnection = "";
    private string filterGroup = "";

    private bool showJobModal = false;
    private bool showDeleteConfirm = false;
    private bool showQueueMetrics = false;
    private Job? editingJob = null;
    private Job? deletingJob = null;

    private JobStatistics statistics = new();
    private QueueMetrics queueMetrics = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProfiles();
        await LoadConnections();
        await LoadGroups();
        await LoadJobs();
        await LoadStatistics();
        await LoadQueueMetrics();
    }

    private async Task LoadJobs()
    {
        try
        {
            jobs = (await JobService.GetAllAsync()).ToList();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load jobs");
            ToastService.ShowError("Failed to load jobs");
        }
    }

    private async Task LoadProfiles()
    {
        try
        {
            profiles = await ProfileService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load profiles");
        }
    }

    private async Task LoadConnections()
    {
        try
        {
            connections = (await ConnectionService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load connections");
        }
    }

    private async Task LoadGroups()
    {
        try
        {
            groups = (await GroupService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load groups");
        }
    }

    private async Task LoadStatistics()
    {
        try
        {
            statistics = await JobService.GetStatisticsAsync();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load statistics");
        }
    }

    private async Task LoadQueueMetrics()
    {
        try
        {
            queueMetrics = await JobService.GetQueueMetricsAsync();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load queue metrics");
        }
    }

    private void ApplyFilters()
    {
        filteredJobs = jobs.Where(j =>
        {
            // Search query filter
            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                var query = searchQuery.ToLower();
                var matchesName = j.Name.ToLower().Contains(query);
                var matchesDescription = (j.Description ?? "").ToLower().Contains(query);
                var matchesProfile = GetProfileName(j.ProfileId ?? 0).ToLower().Contains(query);

                if (!matchesName && !matchesDescription && !matchesProfile)
                    return false;
            }

            // Health filter
            if (!string.IsNullOrWhiteSpace(filterHealth))
            {
                var health = GetJobHealth(j);
                if (health != filterHealth)
                    return false;
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(filterStatus))
            {
                if (j.LastExecutionStatus?.ToString() != filterStatus)
                    return false;
            }

            // Profile filter
            if (!string.IsNullOrWhiteSpace(filterProfile) && int.TryParse(filterProfile, out var profileId))
            {
                if (j.ProfileId != profileId)
                    return false;
            }

            // Connection filter (via profile)
            if (!string.IsNullOrWhiteSpace(filterConnection) && int.TryParse(filterConnection, out var connId))
            {
                var profile = profiles.FirstOrDefault(p => p.Id == j.ProfileId);
                if (profile?.ConnectionId != connId)
                    return false;
            }

            // Group filter
            if (!string.IsNullOrWhiteSpace(filterGroup) && int.TryParse(filterGroup, out var groupId))
            {
                if (j.GroupId != groupId)
                    return false;
            }

            return true;
        }).ToList();
    }

    private void ClearAllFilters()
    {
        searchQuery = "";
        filterHealth = "";
        filterStatus = "";
        filterProfile = "";
        filterConnection = "";
        filterGroup = "";
        ApplyFilters();
    }

    private bool HasActiveFilters()
    {
        return !string.IsNullOrWhiteSpace(searchQuery) ||
               !string.IsNullOrWhiteSpace(filterHealth) ||
               !string.IsNullOrWhiteSpace(filterStatus) ||
               !string.IsNullOrWhiteSpace(filterProfile) ||
               !string.IsNullOrWhiteSpace(filterConnection) ||
               !string.IsNullOrWhiteSpace(filterGroup);
    }

    private void FilterByHealth(string health)
    {
        filterHealth = health;
        ApplyFilters();
    }

    private void ToggleQueueMetrics()
    {
        showQueueMetrics = !showQueueMetrics;
    }

    private async Task RefreshQueueMetrics()
    {
        await LoadQueueMetrics();
        ToastService.ShowSuccess("Queue metrics refreshed");
    }

    private void OpenAddJobModal()
    {
        editingJob = null;
        showJobModal = true;
    }

    private void EditJob(Job job)
    {
        editingJob = job;
        showJobModal = true;
    }

    private void CloseJobModal()
    {
        showJobModal = false;
        editingJob = null;
    }

    private async Task HandleJobSaved()
    {
        showJobModal = false;
        editingJob = null;
        await LoadJobs();
        await LoadStatistics();
        ToastService.ShowSuccess("Job saved successfully");
    }

    private void DeleteJob(Job job)
    {
        deletingJob = job;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
        deletingJob = null;
    }

    private async Task ConfirmDelete()
    {
        if (deletingJob == null) return;

        try
        {
            var success = await JobService.DeleteAsync(deletingJob.Id);
            if (success)
            {
                ToastService.ShowSuccess($"Job '{deletingJob.Name}' deleted successfully");
                showDeleteConfirm = false;
                deletingJob = null;
                await LoadJobs();
                await LoadStatistics();
            }
            else
            {
                ToastService.ShowError("Failed to delete job");
            }
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to delete job {JobId}", deletingJob.Id);
            ToastService.ShowError("An error occurred while deleting the job");
        }
    }

    private async Task RunJobNow(Job job)
    {
        try
        {
            await JobService.TriggerManualExecutionAsync(job.Id);
            ToastService.ShowSuccess($"Job '{job.Name}' triggered successfully");
            await LoadStatistics();
            await LoadQueueMetrics();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to run job {JobId}", job.Id);
            ToastService.ShowError("Failed to run job");
        }
    }

    private string GetProfileName(int profileId)
    {
        var profile = profiles.FirstOrDefault(p => p.Id == profileId);
        return profile?.Name ?? $"Profile #{profileId}";
    }

    private string GetScheduleDisplay(Job job)
    {
        return job.ScheduleType switch
        {
            ScheduleType.Manual => "Manual",
            ScheduleType.Cron => $"Cron: {job.CronExpression}",
            ScheduleType.Interval => $"Every {job.IntervalMinutes} min",
            ScheduleType.Daily => "Daily",
            ScheduleType.Weekly => "Weekly",
            ScheduleType.Monthly => "Monthly",
            _ => "Unknown"
        };
    }

    private string GetJobHealth(Job job)
    {
        if (!job.IsEnabled) return "disabled";
        if (job.IsAutoPaused) return "auto-paused";
        if (job.ConsecutiveFailures >= 3) return "failing";
        if (job.ConsecutiveFailures > 0) return "warning";
        return "healthy";
    }

    private RenderFragment RenderHealthBadge(Job job) => __builder =>
    {
        var health = GetJobHealth(job);
        var (badgeClass, icon, text) = health switch
        {
            "auto-paused" => ("bg-red-100 text-red-700 border border-red-200", "pause-circle", "Auto-Paused"),
            "failing" => ("bg-red-100 text-red-700 border border-red-200", "alert-triangle", "Failing"),
            "warning" => ("bg-yellow-100 text-yellow-700 border border-yellow-200", "alert-circle", "Warning"),
            "healthy" => ("bg-green-100 text-green-700 border border-green-200", "check-circle", "Healthy"),
            "disabled" => ("bg-gray-100 text-gray-700 border border-gray-200", "circle", "Disabled"),
            _ => ("bg-gray-100 text-gray-700 border border-gray-200", "circle", "Unknown")
        };

        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium @badgeClass">
            <i data-lucide="@icon" class="h-3 w-3 mr-1"></i>
            @text
        </span>
    };

    private RenderFragment RenderLastExecution(Job job) => __builder =>
    {
        if (job.LastExecutionTime == null)
        {
            <span class="text-gray-400">Never run</span>
            return;
        }

        var statusClass = job.LastExecutionStatus switch
        {
            0 => "text-gray-600", // Idle
            1 => "text-blue-600", // Queued
            2 => "text-green-600", // Running
            3 => "text-green-600", // Completed
            4 => "text-red-600", // Failed
            5 => "text-yellow-600", // Cancelled
            _ => "text-gray-600"
        };

        var statusText = job.LastExecutionStatus switch
        {
            0 => "Idle",
            1 => "Queued",
            2 => "Running",
            3 => "Success",
            4 => "Failed",
            5 => "Cancelled",
            _ => "Unknown"
        };

        <div>
            <div class="@statusClass text-xs font-medium">@statusText</div>
            <div class="text-xs text-gray-400">@job.LastExecutionTime.Value.ToString("MMM dd, HH:mm")</div>
        </div>
    };
}
