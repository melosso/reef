@page "/profiles"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inject ProfileService ProfileService
@inject ToastService ToastService
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime
@using Reef.Core.Models

<PageTitle>Profiles · Reef</PageTitle>

<div>
    <div class="flex items-end justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">Profiles</h1>
            <p class="text-sm text-gray-500 mt-1">Manage data export profiles and configurations.</p>
        </div>
        <div class="flex space-x-2">
            <button @onclick="OpenAddProfileModal"
                    class="px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700 shadow-lg shadow-blue-500/20 transition-all flex items-center">
                <i data-lucide="plus" class="h-4 w-4 mr-2"></i>
                New Profile
            </button>
        </div>
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
        <div class="surface-container p-4">
            <p class="text-[11px] font-bold text-gray-400 uppercase">Total Profiles</p>
            <p class="text-2xl font-semibold text-gray-900">@profiles.Count</p>
        </div>
        <div class="surface-container p-4">
            <p class="text-[11px] font-bold text-gray-400 uppercase">Enabled</p>
            <p class="text-2xl font-semibold text-green-600">@profiles.Count(p => p.IsEnabled)</p>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="mb-6">
        <FilterBar OnFilterChange="HandleFilterChange"
                   SearchPlaceholder="Search profiles by name..."
                   ShowStatusFilter="false"
                   ResultCount="filteredProfiles.Count" />
    </div>

    <!-- Profiles Table -->
    <div class="surface-container overflow-hidden">
        @if (filteredProfiles.Count == 0)
        {
            <div class="p-12 text-center">
                <i data-lucide="inbox" class="h-12 w-12 text-gray-300 mx-auto mb-4"></i>
                <p class="text-gray-500 text-sm">
                    @if (string.IsNullOrWhiteSpace(searchQuery))
                    {
                        <text>No profiles found. Click "New Profile" to create one.</text>
                    }
                    else
                    {
                        <text>No profiles match your search.</text>
                    }
                </p>
            </div>
        }
        else
        {
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50/50 border-b border-gray-100">
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Name</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Connection</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Format</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Last Run</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase">Status</th>
                        <th class="px-6 py-4 text-[11px] font-bold text-gray-400 uppercase text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var profile in filteredProfiles)
                    {
                        <tr class="hover:bg-blue-50/30 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="font-medium text-gray-900">@profile.Name</div>
                                <div class="text-xs text-gray-500 font-mono">@GetQueryPreview(profile.Query)</div>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @(profile.ConnectionName ?? "—")
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @GetOutputFormatDisplay(profile)
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-2">
                                    @if (profile.LastExecutionStatus != null)
                                    {
                                        @if (profile.LastExecutionStatus == "Success")
                                        {
                                            <StatusBadge Text="" Color="teal" ShowDot="true" Title="Success" />
                                        }
                                        else if (profile.LastExecutionStatus == "Failed")
                                        {
                                            <StatusBadge Text="" Color="red" ShowDot="true" Title="Failed" />
                                        }
                                        else if (profile.LastExecutionStatus == "Running")
                                        {
                                            <StatusBadge Text="" Color="blue" ShowDot="true" Title="Running" />
                                        }
                                    }
                                    else if (profile.LastExecutedAt == null)
                                    {
                                        <StatusBadge Text="" Color="slate" ShowDot="true" Title="Never ran" />
                                    }
                                    <span class="text-sm text-gray-600">@(profile.LastExecutedAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <StatusBadge Text="@(profile.IsEnabled ? "Enabled" : "Disabled")"
                                             Color="@(profile.IsEnabled ? "green" : "gray")"
                                             ShowDot="true" />
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end space-x-1">
                                    <!-- Execute Button -->
                                    @if (profile.IsEnabled)
                                    {
                                        <button @onclick="() => ExecuteProfile(profile)"
                                                class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-green-600"
                                                title="Execute Profile">
                                            <i data-lucide="play-circle" class="h-4 w-4"></i>
                                        </button>
                                    }

                                    <!-- Toggle Enable/Disable Button -->
                                    <button @onclick="() => ToggleProfile(profile)"
                                            class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-gray-700"
                                            title="@(profile.IsEnabled ? "Disable Profile" : "Enable Profile")">
                                        @if (profile.IsEnabled)
                                        {
                                            <i data-lucide="pause" class="h-4 w-4"></i>
                                        }
                                        else
                                        {
                                            <i data-lucide="play" class="h-4 w-4"></i>
                                        }
                                    </button>

                                    <!-- Export to TOML Button -->
                                    <button @onclick="() => ExportToToml(profile)"
                                            class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-purple-600"
                                            title="Export to TOML">
                                        <i data-lucide="download" class="h-4 w-4"></i>
                                    </button>

                                    <!-- Edit Button -->
                                    <button @onclick="() => EditProfile(profile)"
                                            class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-blue-600"
                                            title="Edit">
                                        <i data-lucide="edit-2" class="h-4 w-4"></i>
                                    </button>

                                    <!-- Delete Button -->
                                    <button @onclick="() => DeleteProfile(profile)"
                                            class="opacity-0 group-hover:opacity-100 p-2 hover:bg-white hover:shadow-sm rounded-md transition-all text-gray-400 hover:text-red-600"
                                            title="Delete">
                                        <i data-lucide="trash-2" class="h-4 w-4"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- Profile Modal -->
<Modal Title="@(editingProfile == null ? "Add New Profile" : "Edit Profile")"
       IsVisible="showProfileModal"
       OnClose="CloseProfileModal"
       Size="large">
    <ProfileForm Profile="editingProfile" OnSave="HandleProfileSaved" OnCancel="CloseProfileModal" />
</Modal>

<!-- Delete Confirmation -->
<Modal Title="Confirm Delete" IsVisible="@(showDeleteConfirm && deletingProfile != null)" OnClose="CancelDelete">
    <div class="space-y-4">
        <p class="text-gray-700">Are you sure you want to delete the profile <b>"@(deletingProfile?.Name)"</b>?</p>
        <div class="flex justify-end space-x-3 pt-4 border-t">
            <button @onclick="CancelDelete"
                    class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                Cancel
            </button>
            <button @onclick="ConfirmDelete"
                    class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                Delete
            </button>
        </div>
    </div>
</Modal>

@code {
    private List<ProfileWithConnection> profiles = new();
    private List<ProfileWithConnection> filteredProfiles = new();
    private string searchQuery = "";

    private bool showProfileModal = false;
    private bool showDeleteConfirm = false;
    private ProfileWithConnection? editingProfile = null;
    private ProfileWithConnection? deletingProfile = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfiles();
    }

    private async Task LoadProfiles()
    {
        try
        {
            profiles = (await ProfileService.GetAllAsync()).ToList();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to load profiles");
            ToastService.ShowError("Failed to load profiles");
        }
    }

    private void HandleFilterChange(FilterState filterState)
    {
        searchQuery = filterState.SearchTerm;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredProfiles = profiles.Where(p =>
        {
            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                var query = searchQuery.ToLower();
                var matchesName = p.Name.ToLower().Contains(query);
                var matchesConnection = (p.ConnectionName ?? "").ToLower().Contains(query);

                if (!matchesName && !matchesConnection)
                    return false;
            }

            return true;
        }).ToList();
    }

    private void OpenAddProfileModal()
    {
        editingProfile = null;
        showProfileModal = true;
    }

    private void EditProfile(ProfileWithConnection profile)
    {
        editingProfile = profile;
        showProfileModal = true;
    }

    private void CloseProfileModal()
    {
        showProfileModal = false;
        editingProfile = null;
    }

    private async Task HandleProfileSaved()
    {
        showProfileModal = false;
        editingProfile = null;
        await LoadProfiles();
        ToastService.ShowSuccess("Profile saved successfully");
    }

    private void DeleteProfile(ProfileWithConnection profile)
    {
        deletingProfile = profile;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
        deletingProfile = null;
    }

    private async Task ConfirmDelete()
    {
        if (deletingProfile == null) return;

        try
        {
            var success = await ProfileService.DeleteAsync(deletingProfile.Id);
            if (success)
            {
                ToastService.ShowSuccess($"Profile '{deletingProfile.Name}' deleted successfully");
                showDeleteConfirm = false;
                deletingProfile = null;
                await LoadProfiles();
            }
            else
            {
                ToastService.ShowError("Failed to delete profile");
            }
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to delete profile {ProfileId}", deletingProfile.Id);
            ToastService.ShowError("An error occurred while deleting the profile");
        }
    }

    private string GetQueryPreview(string query)
    {
        if (string.IsNullOrWhiteSpace(query))
            return "—";

        var preview = query.Replace("\n", " ").Replace("\r", " ").Trim();
        return preview.Length > 60 ? preview.Substring(0, 60) + "..." : preview;
    }

    private string GetOutputFormatDisplay(ProfileWithConnection profile)
    {
        // If profile uses a template, display template name instead of raw format
        if (profile.TemplateId.HasValue && !string.IsNullOrWhiteSpace(profile.TemplateName))
        {
            // For DocumentTemplate type (11), show the template name
            if (profile.TemplateType == 11)
            {
                return $"Document: {profile.TemplateName}";
            }
            // For other template types, show template name
            return profile.TemplateName;
        }

        // Otherwise show the raw output format
        return profile.OutputFormat;
    }

    private async Task ExecuteProfile(ProfileWithConnection profile)
    {
        try
        {
            // Call the API endpoint via fetch
            var response = await JSRuntime.InvokeAsync<object>("fetch", $"/api/executions/execute/{profile.Id}", new
            {
                method = "POST",
                headers = new Dictionary<string, string>
                {
                    { "Content-Type", "application/json" }
                }
            });

            ToastService.ShowSuccess($"Profile '{profile.Name}' execution started");

            // Navigate to executions page to see results
            await Task.Delay(300);
            Nav.NavigateTo("/executions");
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to execute profile {ProfileId}", profile.Id);
            ToastService.ShowError($"Failed to execute profile: {ex.Message}");
        }
    }

    private async Task ToggleProfile(ProfileWithConnection profile)
    {
        try
        {
            var newState = !profile.IsEnabled;

            // Get full profile and update just the IsEnabled flag
            var fullProfile = await ProfileService.GetByIdAsync(profile.Id);
            if (fullProfile == null)
            {
                ToastService.ShowError("Profile not found");
                return;
            }

            var profileToUpdate = new Profile
            {
                Id = fullProfile.Id,
                Name = fullProfile.Name,
                ConnectionId = fullProfile.ConnectionId,
                Query = fullProfile.Query,
                OutputFormat = fullProfile.OutputFormat,
                IsEnabled = newState,
                Hash = fullProfile.Hash ?? ""
            };

            var success = await ProfileService.UpdateAsync(profileToUpdate);

            if (success)
            {
                ToastService.ShowSuccess($"Profile '{profile.Name}' {(newState ? "enabled" : "disabled")}");
                StateHasChanged();
            }
            else
            {
                // Revert on failure
                profile.IsEnabled = !newState;
                ToastService.ShowError("Failed to toggle profile status");
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to toggle profile {ProfileId}", profile.Id);
            ToastService.ShowError($"Failed to toggle profile: {ex.Message}");
        }
    }

    private async Task ExportToToml(ProfileWithConnection profile)
    {
        try
        {
            // Download via navigation (API endpoint should return file)
            var downloadUrl = $"/api/profiles/{profile.Id}/export";
            await JSRuntime.InvokeVoidAsync("open", downloadUrl, "_blank");

            ToastService.ShowSuccess($"Profile '{profile.Name}' export started");
        }
        catch (Exception ex)
        {
            Serilog.Log.Error(ex, "Failed to export profile {ProfileId} to TOML", profile.Id);
            ToastService.ShowError($"Failed to export profile: {ex.Message}");
        }
    }
}
