@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode())
@inject PasswordChangeModalService ModalService
@inject AdminService AdminService
@inject ToastService ToastService
@inject NavigationManager Nav
@inject IJSRuntime JS
@implements IDisposable

@if (ModalService.IsVisible)
{
    <div class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-[200]">
        <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md">
            <div class="flex items-center mb-4">
                <div class="bg-yellow-100 rounded-full p-2 mr-3">
                    <i data-lucide="alert-triangle" class="h-6 w-6 text-yellow-600"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900">Action required</h3>
            </div>

            <p class="text-gray-600 mb-6">
                This account has been set-up with a default password. For security reasons, you must <strong>change your password</strong> before continuing.
            </p>

            <div class="space-y-4">
                <div>
                    <label for="modalCurrentPassword" class="block text-sm font-medium text-gray-700 mb-1">Change password</label>
                    <input type="password"
                           id="modalCurrentPassword"
                           @bind="currentPassword"
                           @bind:event="oninput"
                           @onkeypress="HandleKeyPress"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div>
                    <label for="modalNewPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                    <input type="password"
                           id="modalNewPassword"
                           @bind="newPassword"
                           @bind:event="oninput"
                           @onkeypress="HandleKeyPress"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <p class="text-xs text-gray-500 mt-1">Must be at least 6 characters long</p>
                </div>

                <div>
                    <label for="modalConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                    <input type="password"
                           id="modalConfirmPassword"
                           @bind="confirmPassword"
                           @bind:event="oninput"
                           @onkeypress="HandleKeyPress"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
            </div>

            <div class="flex justify-end mt-6">
                <button @onclick="ChangePassword"
                        disabled="@isChangingPassword"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed flex items-center">
                    @if (isChangingPassword)
                    {
                        <span>Changing...</span>
                    }
                    else
                    {
                        <span>Change Password</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private string currentPassword = "";
    private string newPassword = "";
    private string confirmPassword = "";
    private bool isChangingPassword = false;

    protected override void OnInitialized()
    {
        ModalService.OnShow += HandleShow;
        ModalService.OnHide += HandleHide;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (ModalService.IsVisible)
        {
            await JS.InvokeVoidAsync("initLucide");
        }
    }

    private void HandleShow()
    {
        // Reset form fields when modal is shown
        currentPassword = "";
        newPassword = "";
        confirmPassword = "";
        isChangingPassword = false;
        StateHasChanged();
    }

    private void HandleHide()
    {
        StateHasChanged();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await ChangePassword();
        }
    }

    private async Task ChangePassword()
    {
        // Client-side validation
        if (string.IsNullOrWhiteSpace(currentPassword) ||
            string.IsNullOrWhiteSpace(newPassword) ||
            string.IsNullOrWhiteSpace(confirmPassword))
        {
            ToastService.ShowError("All fields are required");
            return;
        }

        if (newPassword != confirmPassword)
        {
            ToastService.ShowError("New passwords do not match");
            return;
        }

        if (newPassword.Length < 6)
        {
            ToastService.ShowError("Password must be at least 6 characters long");
            return;
        }

        if (string.IsNullOrEmpty(ModalService.Username))
        {
            ToastService.ShowError("Unable to determine current user");
            return;
        }

        isChangingPassword = true;
        StateHasChanged();

        try
        {
            var (success, message, requiresLogoff) = await AdminService.ChangePasswordAsync(
                ModalService.Username, currentPassword, newPassword);

            if (success)
            {
                ToastService.ShowSuccess(message);

                if (requiresLogoff)
                {
                    // Redirect to logout after a short delay to show the success message
                    await Task.Delay(1500);
                    Nav.NavigateTo("/logout", forceLoad: true);
                }
                else
                {
                    ModalService.Hide();
                }
            }
            else
            {
                ToastService.ShowError(message);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError("An error occurred while changing password");
            Console.WriteLine($"Password change error: {ex.Message}");
        }
        finally
        {
            isChangingPassword = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        ModalService.OnShow -= HandleShow;
        ModalService.OnHide -= HandleHide;
    }
}
