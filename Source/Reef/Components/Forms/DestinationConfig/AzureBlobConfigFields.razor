@using Reef.Core.Models

<div class="space-y-4">
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Connection String *</label>
        <InputTextArea @bind-Value="Config.ConnectionString" rows="3"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md font-mono text-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net" />
        <p class="text-xs text-gray-500 mt-1">Azure Storage connection string from the portal</p>
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Container Name *</label>
        <InputText @bind-Value="Config.ContainerName"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   placeholder="exports" />
        <p class="text-xs text-gray-500 mt-1">The container must already exist in your storage account</p>
    </div>

    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Prefix</label>
        <InputText @bind-Value="Config.BlobPrefix"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   placeholder="data/" />
        <p class="text-xs text-gray-500 mt-1">Optional folder prefix within the container</p>
    </div>
</div>

@code {
    [Parameter]
    public DestinationConfiguration Config { get; set; } = new();

    [Parameter]
    public EventCallback<DestinationConfiguration> ConfigChanged { get; set; }
}
