@rendermode InteractiveServer

<div class="grid grid-cols-2 gap-4">
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">SMTP Server *</label>
        <input type="text" @bind="Config.SmtpServer" @bind:event="oninput" @bind:after="NotifyConfigChanged"
               required
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
               placeholder="smtp.gmail.com" />
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">SMTP Port *</label>
        <input type="number" @bind="Config.SmtpPort" @bind:event="oninput" @bind:after="NotifyConfigChanged"
               required
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
               placeholder="587" />
    </div>
</div>

<div class="grid grid-cols-2 gap-4">
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">SMTP Username</label>
        <input type="text" @bind="Config.SmtpUsername" @bind:event="oninput" @bind:after="NotifyConfigChanged"
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        <p class="text-xs text-gray-500 mt-1">Leave unchanged to keep existing value</p>
    </div>
    <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">SMTP Password</label>
        <input type="password" @bind="Config.SmtpPassword" @bind:event="oninput" @bind:after="NotifyConfigChanged"
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        <p class="text-xs text-gray-500 mt-1">Leave unchanged to keep existing value</p>
    </div>
</div>

<div>
    <label class="block text-sm font-medium text-gray-700 mb-1">From Address *</label>
    <input type="email" @bind="Config.FromAddress" @bind:event="oninput" @bind:after="NotifyConfigChanged"
           required
           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
           placeholder="noreply@example.com" />
</div>

<div>
    <label class="block text-sm font-medium text-gray-700 mb-1">To Addresses *</label>
    <input type="text" @bind="Config.ToAddresses" @bind:event="oninput" @bind:after="NotifyConfigChanged"
           required
           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
           placeholder="user@example.com, admin@example.com" />
    <p class="text-xs text-gray-500 mt-1">Comma-separated email addresses</p>
</div>

<div>
    <label class="block text-sm font-medium text-gray-700 mb-1">Subject Template</label>
    <input type="text" @bind="Config.Subject" @bind:event="oninput" @bind:after="NotifyConfigChanged"
           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
           placeholder="Report: {{ProfileName}}" />
    <p class="text-xs text-gray-500 mt-1">Use {{ProfileName}} for dynamic values</p>
</div>

<div class="flex items-start mt-2">
    <div class="flex items-center h-5">
        <input type="checkbox" id="email-ssl" @bind="Config.EnableSsl" @bind:after="NotifyConfigChanged"
               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
    </div>
    <div class="ml-3">
        <label for="email-ssl" class="text-sm font-medium text-gray-700">Enable SSL/TLS</label>
        <p class="text-xs text-gray-500 mt-1">Use secure connection (recommended for ports 465 and 587)</p>
    </div>
</div>

<div class="bg-blue-50 border border-blue-200 rounded-lg p-3 mt-4">
    <div class="flex items-start">
        <i data-lucide="info" class="w-4 h-4 text-blue-600 mt-0.5 mr-2 flex-shrink-0"></i>
        <div class="text-xs text-blue-800">
            <strong>Common SMTP Settings:</strong>
            <ul class="list-disc ml-4 mt-1 space-y-0.5">
                <li><strong>Gmail:</strong> smtp.gmail.com:587 (Use App Password, not regular password)</li>
                <li><strong>Office 365:</strong> smtp.office365.com:587</li>
                <li><strong>Outlook:</strong> smtp-mail.outlook.com:587</li>
            </ul>
        </div>
    </div>
</div>

@code {
    [Parameter] public DestinationConfiguration Config { get; set; } = new();
    [Parameter] public EventCallback<DestinationConfiguration> ConfigChanged { get; set; }

    protected override void OnInitialized()
    {
        // Set defaults
        if (Config.SmtpPort == null || Config.SmtpPort == 0)
            Config.SmtpPort = 587;
        if (!Config.EnableSsl)
            Config.EnableSsl = true;
    }

    private async Task NotifyConfigChanged()
    {
        await ConfigChanged.InvokeAsync(Config);
    }
}
